    "eslint-plugin-promise": "^3.8.0",
    "grunt": "~0.4.1",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-imagemin": "^1.0.0",
    "grunt-exec": "^3.0.0",
    "grunt-image": "^4.3.0",
    "grunt-responsive-images": "^1.10.1",
    "grunt-responsive-videos": "^0.1.3",
    "grunt-webp": "0.0.4",
    "jit-grunt": "^0.10.0",
    "js.node.grunt.config.helper": "^1.0.1",
    "load-grunt-configs": "^1.0.0",
    "time-grunt": "^1.4.0"
