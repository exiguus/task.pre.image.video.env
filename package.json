{
  "version": "1.1.0",
  "name": "task.pre.image.video.env",
  "description": "Task-Runner Environment to convert and optimise images and videos.",
  "keywords": [
    "images",
    "picture",
    "video",
    "movie",
    "preparation",
    "cropping",
    "minify",
    "optimize",
    "optimise",
    "convert",
    "breakpoints",
    "webp",
    "jpeg",
    "png",
    "webm",
    "mp4",
    "CD/CI",
    "continuous integration",
    "continuous delivery",
    "static site generator"
  ],
  "scripts": {
    "start": "npm install && npm run build",
    "build": "npm run build-images && npm run build-videos",
    "build-images": "grunt images",
    "build-videos": "grunt videos",
    "lint": "node_modules/eslint/bin/eslint.js build/** Gruntfile.js",
    "test-pre": "ls -R ./dist > ./dist.test",
    "test": "npm run lint && npm run test-pre && npm run build && npm run test-dist",
    "test-dist": "ls -R ./dist > ./dist.current && cmp --silent ./dist.test ./dist.current && (echo 'Success: Equal dist/ Test ok.' && exit 0) || (echo 'Error: Equal dist/ Test failed.' && exit 1)"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
